// Detect It Easy: detection rule file

init("format", "NodeJS package");

function detect() {
    if (NPM.isVerbose()) {
        sType = "operation system";
        sName = NPM.getOperationSystemName();
        sVersion = NPM.getOperationSystemVersion();
        sOptions = NPM.getOperationSystemOptions();

        bDetected = true;
    }

    return result();
}